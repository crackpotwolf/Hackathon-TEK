@model Hackathon_TEK.ModelsView.RegionInfo

<div class="card-body">

    <h4 id="RegionName" value="@Html.DisplayFor(model => model.Region)" class="text-center">@Html.DisplayFor(model => model.Name)</h4>
    @if (!string.IsNullOrEmpty(Model.ChartLabels))
    {
        <canvas id="myChart" style="width: 100%; height: 120px;"></canvas>
    }
    <table class="table table-striped">
        <tbody>
            <tr>
                <td>Температура</td>
                <td>@Html.DisplayFor(model => model.Temperature)</td>
            </tr>
            <tr>
                <td>Скорость ветра</td>
                <td>@Html.DisplayFor(model => model.WindSpeed)</td>
            </tr>
            <tr>
                <td>Облачность</td>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <td>Влажность</td>
                <td>@Html.DisplayFor(model => model.Humidity)</td>
            </tr>
            <tr>
                <td>Вероятность пожаров</td>
                <td>@Html.DisplayFor(model => model.Fires)</td>
            </tr>
            <tr>
                <td>Вероятность землетресений</td>
                <td>@Html.DisplayFor(model => model.Earthquake)</td>
            </tr>
            <tr>
                <td>Повреждение</td>
                <td>@Html.DisplayFor(model => model.Damage)</td>
            </tr>
        </tbody>
    </table>

    <h4 class="text-center">Вероятность возникновения ЧС: @Html.DisplayFor(model => model.ProbabilityEmergency)</h4>
</div>
<script>
    var ctx = document.getElementById('myChart');
    var labels = '@Model.ChartLabels';
    var data = '@Model.ChartData'.replaceAll(',','.');
    //const labels = Utils.months({ count: 7 });
    var chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels.split(','),
            datasets: [{
                label: 'My First Dataset',
                data: data.split(';'),
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
        },
        options: {
            plugins: {
                legend: {
                    display: false,
                }
            }
        }
    });
</script>